    if(oldBar) oldBar.style.display = 'none';

    waitForHeader(function (header) {
        

        header.style.top = '40px'; 
        header.style.transition = 'top 0.4s ease-in-out';

        const messages = [
            "ساتر .. لا يشف ولا يصف",
            "صنع في مصر",
            "ضمان إستبدال واسترجاع 14 يوم",
            "شحن جميع محافظات مصر والدول العربية"            
        ];

        const bar = document.createElement("div");
        bar.id = "fixed-announcement-bar";
        bar.style = `
            background-color: #4A1C2A; 
            color: #F4F3E1;            
            padding: 8px 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 15px;
            font-size: 14px;
            font-weight: 600;
            font-family: inherit;
                        position: fixed;         
            top: 0;
            left: 0;
            width: 100%;             
            z-index: 39;         
            height: 40px; 
            box-sizing: border-box;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            direction: ltr;
        `;

        const btnStyle = `background: transparent; color: #F4F3E1; border: none; cursor: pointer; font-size: 14px; padding: 0 10px; opacity: 0.7;`;
        
        const btnPrev = document.createElement("button");
        btnPrev.innerHTML = "❮";
        btnPrev.style = btnStyle;

        const btnNext = document.createElement("button");
        btnNext.innerHTML = "❯";
        btnNext.style = btnStyle;

        const wrapper = document.createElement("div");
        wrapper.className = "ann-wrapper";
        wrapper.style = `position: relative; height: 24px; overflow: hidden; display: flex; align-items: center; justify-content: center; min-width: 250px; text-align: center;`;

        const slides = messages.map((msg, index) => {
            const s = document.createElement("div");
            s.style = `position: absolute; opacity: 0; transform: translateY(15px); white-space: nowrap; transition: opacity 0.4s ease, transform 0.4s ease; width: 100%; pointer-events: none;`;
            s.textContent = msg;
            if (index === 0) { s.style.opacity = "1"; s.style.transform = "translateY(0)"; }
            wrapper.appendChild(s);
            return s;
        });

        bar.appendChild(btnPrev);
        bar.appendChild(wrapper);
        bar.appendChild(btnNext);
        document.body.prepend(bar);

        let lastScrollTop = 0;
        const headerHeight = header.offsetHeight || 100; 

        window.addEventListener('scroll', () => {
            let scrollTop = window.pageYOffset || document.documentElement.scrollTop;
            
            if (scrollTop > 50) {
                if (scrollTop > lastScrollTop) {
                    header.style.top = '-150px'; 
                } else {
                    header.style.top = '40px'; 
                }
            } else {
                header.style.top = '40px';
            }
            
            lastScrollTop = scrollTop;
        });


        let index = 0;
        let interval;
        function showSlide(i) {
            slides.forEach(s => { s.style.opacity = "0"; s.style.transform = "translateY(15px)"; });
            slides[i].style.opacity = "1";
            slides[i].style.transform = "translateY(0)";
        }
        function nextSlide() { index = (index + 1) % slides.length; showSlide(index); }
        function prevSlide() { index = (index - 1 + slides.length) % slides.length; showSlide(index); }
        btnNext.onclick = () => { nextSlide(); restartAuto(); };
        btnPrev.onclick = () => { prevSlide(); restartAuto(); };
        function startAuto() { interval = setInterval(nextSlide, 4000); }
        function restartAuto() { clearInterval(interval); startAuto(); }
        startAuto();
    });
});
